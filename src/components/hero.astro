---
import { getRelativeLocaleUrl } from "astro:i18n";
import { Icon } from "astro-icon/components";
import Link from "@/components/ui/link.astro";

interface Props {
	greeting: string;
	description: string;
	ctaBlog: string;
	ctaWork: string;
}

const { greeting, description, ctaBlog, ctaWork } = Astro.props;
const currentLocale = Astro.currentLocale || "en";
---

<main
  class="grid lg:grid-cols-2 place-items-center min-h-[80vh] pt-16 pb-8 md:pt-12 md:pb-24"
>
  <div class="py-6 md:order-1 hidden md:block">
    <img
      src="/avatar.jpg"
      alt="Portrait of Hovirix"
      class="w-full max-w-md rounded-2xl shadow-xl transition-shadow duration-300 hover:shadow-2xl"
      loading="lazy"
      decoding="async"
    />
  </div>

  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold tracking-tight"
    >
      {greeting}
    </h1>

    <p class="mt-4 max-w-xl text-lg text-slate-600">
      {description}
    </p>

    <div class="mt-6 flex flex-col gap-3 sm:flex-row">
      <Link
        href={getRelativeLocaleUrl(currentLocale, "blog")}
        class="flex items-center justify-center gap-2"
      >
        <Icon class="h-5 w-5 text-white" name="bx:bxs-book-open" />
        <span>{ctaBlog}</span>
      </Link>

      <Link
        href="https://github.com/Hovirix"
        target="_blank"
        rel="noopener noreferrer"
        size="lg"
        style="outline"
        class="flex items-center justify-center gap-2"
      >
        <Icon class="h-4 w-4 text-black" name="bx:bxl-github" />
        <span>{ctaWork}</span>
      </Link>
    </div>
  </div>
</main>
