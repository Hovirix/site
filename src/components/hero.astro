---
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
import { getLangFromUrl, useTranslations } from "@/utils/i18n";

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
const langPrefix = currentLang === 'en' ? '' : `/${currentLang}`;
---

<main
  class="grid lg:grid-cols-2 place-items-center min-h-[80vh] pt-16 pb-8 md:pt-12 md:pb-24"
>
  <div class="py-6 md:order-1 hidden md:block">
    <img
      src="/avatar.jpg"
      alt="Portrait of Hovirix"
      class="w-full max-w-md rounded-2xl shadow-xl transition-shadow duration-300 hover:shadow-2xl"
      loading="lazy"
      decoding="async"
    />
  </div>

  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold tracking-tight"
    >
      {t("hero.greeting")}
    </h1>

    <p class="mt-4 max-w-xl text-lg text-slate-600">
      {t("hero.description")}
    </p>

    <div class="mt-6 flex flex-col gap-3 sm:flex-row">
      <Link
        href={`${langPrefix}/blog`}
        class="flex items-center justify-center gap-2"
      >
        <Icon class="h-5 w-5 text-white" name="bx:bxs-book-open" />
        <span>{t("hero.cta.blog")}</span>
      </Link>

      <Link
        href="https://github.com/Hovirix"
        target="_blank"
        rel="noopener noreferrer"
        size="lg"
        style="outline"
        class="flex items-center justify-center gap-2"
      >
        <Icon class="h-4 w-4 text-black" name="bx:bxl-github" />
        <span>{t("hero.cta.work")}</span>
      </Link>
    </div>
  </div>
</main>
