                target="_blank"
                rel="noopener"
                class="inline-flex items-center gap-2 rounded-lg bg-black px-6 py-3 text-white transition hover:bg-slate-900"
              >
                View GitHub
              </a>
              <a
                href={getRelativeLocaleUrl("en", "contact")}
                class="inline-flex items-center gap-2 rounded-lg border-2 border-slate-300 px-6 py-3 text-gray-800 transition hover:border-slate-400 hover:bg-white"
