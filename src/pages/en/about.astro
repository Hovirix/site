      <!-- CTA Card -->
      <div class="mb-16 rounded-2xl bg-gradient-to-br from-slate-50 to-slate-100 p-8 md:p-12">
        <div class="flex flex-col items-center gap-8 md:flex-row">
          <div class="flex-shrink-0">
            <img
              src="/avatar.jpg"
              alt="Hovirix"
              class="h-32 w-32 rounded-full object-cover object-center shadow-lg ring-4 ring-white md:h-40 md:w-40"
              loading="lazy"
            />
          </div>

          <div class="flex flex-1 flex-col gap-4 text-center md:text-left">
            <div>
              <h3 class="text-2xl font-bold text-gray-800">
